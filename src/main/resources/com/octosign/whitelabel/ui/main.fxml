<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<VBox stylesheets="@shared.css, @main.css, @overrides.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.octosign.whitelabel.ui.MainController">
    <VBox styleClass="panel, secondary" VBox.vgrow="ALWAYS">
        <WebView fx:id="webView" VBox.vgrow="ALWAYS" />
        <TextArea fx:id="textArea" editable="false" styleClass="content" wrapText="true" VBox.vgrow="ALWAYS" />
        <ImageView fx:id="imageView" styleClass="content" VBox.vgrow="ALWAYS" />
    </VBox>

    <HBox alignment="CENTER" spacing="8" styleClass="footer">
        <Button fx:id="aboutButton" onAction="#onAboutButtonAction" styleClass="white">
            <tooltip><Tooltip showDelay="300ms" text="%text.aboutHelp.header" /></tooltip>
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@icons/info-black.png" />
                </image>
                </ImageView>
            </graphic>
        </Button>

        <Label fx:id="signLabel" visible="false" />

        <Region HBox.hgrow="ALWAYS" />

        <HBox styleClass="buttonGroup">
            <Button fx:id="mainButton" onAction="#onMainButtonAction" styleClass="leftButton, primary" text="%btn.loadSigners" />

            <Button fx:id="certSettingsButton" onAction="#onCertSettingsButtonAction" styleClass="rightButton, primary">
                <tooltip><Tooltip showDelay="300ms" text="%text.certSettings" /></tooltip>
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@icons/settings-white.png" />
                    </image>
                    </ImageView>
                </graphic>
            </Button>
         <Button fx:id="hiddenOpenFileButton" managed="false" mnemonicParsing="false" onAction="#onHiddenOpenFileButtonAction" text="Button" visible="false" />
        </HBox>
    </HBox>
</VBox>
