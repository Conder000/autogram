<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.web.WebView?>

<VBox
    xmlns="http://javafx.com/javafx/11.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    stylesheets="@shared.css, @main.css, @overrides.css"

    fx:controller="com.octosign.whitelabel.ui.MainController"
    spacing="16"
>
    <HBox styleClass="card, secondary, p1" alignment="CENTER">
        <Label fx:id="certificateLabel" text="%certificate.label" />

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="certificateButton" onAction="#pickCertificate" text="%certificate.button" />
    </HBox>

    <VBox styleClass="card, secondary" VBox.vgrow="ALWAYS">
        <Label fx:id="documentLabel" text="%document.label" styleClass="p1" />
        <WebView fx:id="webView" VBox.vgrow="ALWAYS" />
    </VBox>

    <HBox styleClass="card, p1" alignment="CENTER">
        <Label fx:id="signLabel" text="By signing..." />

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="signButton" onAction="#sign" text="%sign.button" />
    </HBox>
</VBox>
