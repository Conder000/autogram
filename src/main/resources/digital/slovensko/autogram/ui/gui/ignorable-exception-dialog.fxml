<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.shape.Polygon?>

<VBox xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    prefWidth="450" minWidth="450"
    fx:id="mainBox">

    <VBox styleClass="autogram-error-summary">
        <TextFlow styleClass="autogram-error-summary__title">
            <Text>Upozornenie</Text>
        </TextFlow>
        <TextFlow styleClass="autogram-error-summary__error">
            <Text>Dokument sa nepodarilo vizualizovať</Text>
        </TextFlow>
        <TextFlow styleClass="autogram-error-summary__description,autogram-body">
            <Text>Dodaná transformácia potrebná pre vizualizáciu neprebehla správne. Dokument môžete
                stále podpísať, ale uistite sa, že ide o správny dokument.</Text>
        </TextFlow>

        <TextFlow styleClass="autogram-body">
            <Button fx:id="showErrorDetailsButton"
                styleClass="autogram-link,autogram-error-summary__more-standalone"
                text="Zobraziť detail chyby"
                onAction="#onShowErrorDetailsButtonAction">
                <graphic>
                    <Polygon points="0.0, 0.0, 12.0, 6.0, 0.0, 10.0">
                    </Polygon>
                </graphic>
            </Button>
        </TextFlow>

        <TextArea fx:id="errorDetails" styleClass="autogram-details__text" editable="false"
            visible="false" managed="false">Error details</TextArea>
    </VBox>

    <HBox styleClass="autogram-actions">
        <Button fx:id="cancelButton" styleClass="autogram-button,autogram-button--warning"
            text="Zrušiť podpisovanie" onAction="#onCancelAction" />
        <Button fx:id="continueButton" styleClass="autogram-link" text="Pokračovať"
            onAction="#onContinueAction" />
    </HBox>
</VBox>