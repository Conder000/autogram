<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:id="mainBox"
    prefWidth="896">
    <VBox>
        <TabPane maxHeight="640" prefWidth="896" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" styleClass="autogram-settings-tab-pane">
            <tabs>
                <Tab text="Podpisovanie">
                    <content>
                        <AnchorPane>
                            <VBox>
                                <TextFlow>
                                    <Text styleClass="autogram-heading-m">
                                        Podpisovanie
                                    </Text>
                                </TextFlow>
                                <TextFlow styleClass="autogram-settings-tab-header-text">
                                    <Text styleClass="autogram-body">
                                        Predvolené nastavenia typu a spôsobu podpisovania v desktopovom móde Autogramu.
                                    </Text>
                                </TextFlow>
                                <HBox styleClass="autogram-settings-row">
                                    <VBox styleClass="left">
                                        <TextFlow>
                                            <Text styleClass="autogram-heading-s">
                                                Typ podpisu PDF
                                            </Text>
                                        </TextFlow>
                                        <TextFlow>
                                            <Text styleClass="autogram-description">
                                                Typ podpisu pre PDF dokumenty. PAdES by mal byť všeobecne akceptovaný, no niektoré úrady môžu vyžadovať XAdES alebo CAdES.
                                            </Text>
                                        </TextFlow>
                                    </VBox>
                                    <VBox styleClass="autogram-dropdown">
                                        <ChoiceBox fx:id="signatureLevelChoiceBoxBox" />
                                    </VBox>
                                </HBox>
                                <HBox styleClass="autogram-settings-row">
                                    <VBox styleClass="left">
                                        <TextFlow>
                                            <Text styleClass="autogram-heading-s">
                                                Použitie nového štandardu
                                            </Text>
                                        </TextFlow>
                                        <TextFlow>
                                            <Text styleClass="autogram-description">
                                                Podpisovanie štandardom ETSI EN 319 132 a ETSI EN 319 122.
                                                Pozor, systémy verejnej správy tento štandard zatiaľ nepodporujú.
                                            </Text>
                                        </TextFlow>
                                    </VBox>
                                    <VBox styleClass="autogram-checkbox-container">
                                        <HBox fx:id="en319132Radios"
                                            styleClass="autogram-smaller-radio-buttons" />
                                    </VBox>
                                </HBox>
                                <HBox styleClass="autogram-settings-row">
                                    <VBox styleClass="left">
                                        <TextFlow>
                                            <Text styleClass="autogram-heading-s">
                                                Predvolené úložisko certifikátov
                                            </Text>
                                        </TextFlow>
                                        <TextFlow>
                                            <Text styleClass="autogram-description">
                                                Ak toto úložisko existuje, automaticky sa predvyberie pri podpise.
                                            </Text>
                                        </TextFlow>
                                    </VBox>
                                    <VBox styleClass="autogram-dropdown">
                                        <ChoiceBox fx:id="driverChoiceBox"
                                            styleClass="autogram-choicebox" />
                                    </VBox>
                                </HBox>
                            </VBox>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Overovanie podpisu">
                    <content>
                        <AnchorPane>
                            <ScrollPane hbarPolicy="NEVER" maxHeight="560"
                                fx:id="trustedCountriesListScrollPane">
                                <VBox styleClass="container">
                                    <TextFlow>
                                        <Text styleClass="autogram-heading-m">
                                            Overovanie podpisu
                                        </Text>
                                    </TextFlow>
                                    <TextFlow styleClass="autogram-settings-tab-header-text">
                                        <Text styleClass="autogram-body">
                                            Zoznam krajín, pre ktoré sa overuje platnosť podpisov. Ak potrebujete overovať podpisy z ďalších krajín, vyberte ich v zozname. Počet vybraných krajín vplýva na rýchlosť overovania podpisov.
                                        </Text>
                                    </TextFlow>
                                    <VBox alignment="center" fx:id="trustedCountriesList"
                                        styleClass="autogram-trusted-countries-list" />
                                </VBox>
                            </ScrollPane>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Bezpečnosť">
                    <content>
                        <AnchorPane>
                            <VBox>
                                <TextFlow>
                                    <Text styleClass="autogram-heading-m">
                                        Bezpečnosť
                                    </Text>
                                </TextFlow>
                                <TextFlow styleClass="autogram-settings-tab-header-text">
                                    <Text styleClass="autogram-body">
                                        Z dôvodu bezpečnosti Autogram kontroluje správnosť dokumentu a podpisov a upozorňuje používateľa na nesúlad. Tieto kontroly je možné vypnúť.
                                    </Text>
                                </TextFlow>
                                <HBox styleClass="autogram-settings-row">
                                    <VBox styleClass="left">
                                        <TextFlow>
                                            <Text styleClass="autogram-heading-s">
                                                Správne zobrazenie dokumentu
                                            </Text>
                                        </TextFlow>
                                        <TextFlow>
                                            <Text styleClass="autogram-description">
                                                Zobrazenie chyby, ktorá nastala pri zobrazovaní
                                                dokumentu.
                                            </Text>
                                        </TextFlow>
                                    </VBox>
                                    <VBox styleClass="autogram-checkbox-container">
                                        <HBox fx:id="correctDocumentDisplayRadios"
                                            styleClass="autogram-smaller-radio-buttons" />
                                    </VBox>
                                </HBox>
                                <HBox styleClass="autogram-settings-row">
                                    <VBox styleClass="left">
                                        <TextFlow>
                                            <Text styleClass="autogram-heading-s">
                                                Platnosť podpisov
                                            </Text>
                                        </TextFlow>
                                        <TextFlow>
                                            <Text styleClass="autogram-description">
                                                Upozornenie na neplatné podpisy, ktoré sa už nachádzajú na dokumente.
                                            </Text>
                                        </TextFlow>
                                    </VBox>
                                    <VBox styleClass="autogram-checkbox-container">
                                        <HBox fx:id="signatureValidationRadios"
                                            styleClass="autogram-smaller-radio-buttons" />
                                    </VBox>
                                </HBox>
                                <HBox styleClass="autogram-settings-row">
                                    <VBox styleClass="left">
                                        <TextFlow>
                                            <Text styleClass="autogram-heading-s">
                                                Súlad s PDF/A-1a formátom
                                            </Text>
                                        </TextFlow>
                                        <TextFlow>
                                            <Text styleClass="autogram-description">
                                                Kontrola súladu podpisovaného dokumentu s PDF/A-1a
                                                formátom.
                                            </Text>
                                        </TextFlow>
                                    </VBox>
                                    <VBox styleClass="autogram-checkbox-container">
                                        <HBox fx:id="checkPDFAComplianceRadios"
                                            styleClass="autogram-smaller-radio-buttons" />
                                    </VBox>
                                </HBox>
                            </VBox>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Iné">
                    <content>
                        <AnchorPane>
                            <VBox>
                                <TextFlow>
                                    <Text styleClass="autogram-heading-m">
                                        Iné
                                    </Text>
                                </TextFlow>
                                <TextFlow styleClass="autogram-settings-tab-header-text">
                                    <Text styleClass="autogram-body">
                                        Ďalšie nastavenia Autogramu, ktoré nezapadajú do ostatných kategórií.
                                    </Text>
                                </TextFlow>
                                <HBox styleClass="autogram-settings-row">
                                    <VBox styleClass="left">
                                        <TextFlow>
                                            <Text styleClass="autogram-heading-s">
                                                Autogram API
                                            </Text>
                                        </TextFlow>
                                        <TextFlow>
                                            <Text styleClass="autogram-description">
                                                Spúšťanie lokálneho servera spolu s desktopovou aplikáciou, ktorý umožňuje podpisovať dokumenty z webového prehliadača a iných aplikácií.
                                            </Text>
                                        </TextFlow>
                                    </VBox>
                                    <VBox styleClass="autogram-checkbox-container">
                                        <HBox fx:id="localServerEnabledRadios"
                                            styleClass="autogram-smaller-radio-buttons" />
                                    </VBox>
                                </HBox>
                            </VBox>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </VBox>
    <HBox styleClass="autogram-actions">
        <Button fx:id="closeButton" onAction="#onCancelButtonAction"
            styleClass="autogram-button,autogram-button--secondary">
            Zavrieť
        </Button>
    </HBox>
</VBox>
